<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e4e4"
    tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_login"
        android:layout_width="250dp"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_shape_login"
        >
        <ImageView
            android:background="@drawable/background_logo_login"
            android:id="@+id/img_logon_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo_login"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_login"
            app:layout_constraintRight_toRightOf="@+id/constraint_login"
            app:layout_constraintTop_toTopOf="@+id/constraint_login"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_name_congty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công Ty TNHH Quyết Cường"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#212020"
            app:layout_constraintTop_toBottomOf="@id/img_logon_login"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_login"
            app:layout_constraintRight_toRightOf="@+id/constraint_login"
            />
        <TextView
            android:id="@+id/tv_name_partworking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên đăng nhập"
            android:textSize="14sp"
            android:textColor="#212020"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_congty"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_login"
            app:layout_constraintRight_toRightOf="@+id/constraint_login"
            />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_username_password"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f6f7bf"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_login"
            app:layout_constraintRight_toRightOf="@+id/constraint_login"
            app:layout_constraintTop_toBottomOf="@id/tv_name_partworking">

            <EditText
                android:id="@+id/edt_id_reigister"
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:hint="Mã nhân viên"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password" />

            <EditText
                android:id="@+id/edt_password_reigister"
                android:layout_width="170dp"
                android:layout_height="54dp"
                android:hint="Mật khẩu"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"
                app:layout_constraintTop_toBottomOf="@id/edt_id_reigister" />

            <EditText
                android:id="@+id/edt_confirmpassword_reigister"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="Tên đăng nhập"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"

                />

            <EditText
                android:id="@+id/edt_name_reigister"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="Mật khẩu"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"
                app:layout_constraintTop_toBottomOf="@id/edt_username" />

            <EditText
                android:id="@+id/edt_address_reigister"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="Tên đăng nhập"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"

                />

            <EditText
                android:id="@+id/edt_phone_reigister"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="Mật khẩu"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"
                app:layout_constraintTop_toBottomOf="@id/edt_username" />

            <EditText
                android:id="@+id/edt_email_reigister"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="Tên đăng nhập"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"

                />

            <EditText
                android:id="@+id/edt_chucvu_reigister"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:hint="Tên đăng nhập"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@+id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@+id/constraint_username_password"

                />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/backdround_button_login"
                android:text="Đăng Nhập"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/constraint_username_password"
                app:layout_constraintLeft_toLeftOf="@id/constraint_username_password"
                app:layout_constraintRight_toRightOf="@id/constraint_username_password" />


        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>